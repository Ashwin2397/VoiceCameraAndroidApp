        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <ToggleButton
                    android:id="@+id/btnUp"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_column="1"
                    android:layout_span="2"

                    android:background="@drawable/toggle_button_up"

                    android:textOn=""
                    android:textOff=""
                    android:checked="false"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetLeft="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    tools:ignore="MissingConstraints">
                </ToggleButton>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ToggleButton
                    android:id="@+id/btnLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_button_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_column="0"

                    android:textOn=""
                    android:textOff=""
                    android:checked="false"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetLeft="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    tools:ignore="MissingConstraints">
                </ToggleButton>

                <ToggleButton
                    android:id="@+id/btnRollLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_button_roll_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_column="1"

                    android:textOn=""
                    android:textOff=""
                    android:checked="false"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetLeft="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    tools:ignore="MissingConstraints">
                </ToggleButton>

                <ToggleButton
                    android:id="@+id/btnRollRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_button_roll_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_column="2"

                    android:textOn=""
                    android:textOff=""
                    android:checked="false"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetLeft="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    tools:ignore="MissingConstraints">
                </ToggleButton>


                <ToggleButton
                    android:id="@+id/btnRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_button_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_column="3"

                    android:textOn=""
                    android:textOff=""
                    android:checked="false"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetLeft="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    tools:ignore="MissingConstraints">
                </ToggleButton>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <ToggleButton
                    android:id="@+id/btnDown"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_column="1"
                    android:layout_span="2"

                    android:background="@drawable/toggle_button_down"

                    android:textOn=""
                    android:textOff=""
                    android:checked="false"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetRight="0dp"
                    android:insetLeft="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    tools:ignore="MissingConstraints">
                </ToggleButton>

            </TableRow>
        </TableLayout>
    <TextView
        android:id="@+id/transcription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <!--        android:adjustViewBounds="true"-->
<!--        android:maxWidth="42dp"-->
<!--        android:maxHeight="42dp"-->
<!--        android:scaleType="fitCenter"-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/transcription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shootImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Shoot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/configurationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Configuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startTranscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Voice control: Off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configurationButton" />

    <Button
        android:id="@+id/btnConnectCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Connect camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTranscription" />

    <LinearLayout
        android:id="@+id/parameterButtonCreatorLayout"
        android:layout_marginLeft="180dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"

        android:orientation="horizontal">

    </LinearLayout>
